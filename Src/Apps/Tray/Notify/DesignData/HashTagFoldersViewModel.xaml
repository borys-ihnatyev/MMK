<viewModels:HashTagFoldersViewModel xmlns="clr-namespace:MMK.Notify.ViewModels.HashTagFolders"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:viewModels="clr-namespace:MMK.Notify.ViewModels">
    <viewModels:HashTagFoldersViewModel.Folders>
        <FolderViewModel Path="D:\music\main">
            <FolderViewModel.Patterns>
                <FolderPatternViewModel PatternString="#deep" Priority="3" />
                <FolderPatternViewModel PatternString="#newdisco" Priority="3" />
            </FolderViewModel.Patterns>
        </FolderViewModel>

        <FolderViewModel Path="D:\music\pop">
            <FolderViewModel.Patterns>
                <FolderPatternViewModel PatternString="#pop" />
                <FolderPatternViewModel PatternString="#rus" />
                <FolderPatternViewModel PatternString="#pop #rus" />
            </FolderViewModel.Patterns>
        </FolderViewModel>

        <FolderViewModel Path="D:\music\spec">
            <FolderViewModel.Patterns>
                <FolderPatternViewModel PatternString="#spec" Priority="2" />
                <FolderPatternViewModel PatternString="#rnb" Priority="4" />
                <FolderPatternViewModel PatternString="#trap" Priority="4" />
            </FolderViewModel.Patterns>
        </FolderViewModel>
    </viewModels:HashTagFoldersViewModel.Folders>
</viewModels:HashTagFoldersViewModel>